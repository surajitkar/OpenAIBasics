{
  "include": [
    "foundations/**/*.js",
    "agents/**/*.js", 
    "assistants/**/*.js",
    "advanced/**/*.js",
    "chatbot/**/*.js",
    "index.js",
    "demo-all.js",
    "simple-coverage-test.js"
  ],
  "exclude": [
    "tests/**",
    "node_modules/**",
    "coverage/**",
    "**/*.test.js",
    "**/*.spec.js",
    "test-coverage-setup.js"
  ],
  "reporter": [
    "text",
    "json",
    "html"
  ],
  "reports-dir": "coverage",
  "all": true,
  "check-coverage": false,
  "lines": 80,
  "functions": 80,
  "branches": 80,
  "statements": 80
}