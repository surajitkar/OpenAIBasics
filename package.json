{
  "name": "openai-hackathon-starter",
  "version": "1.0.0",
  "description": "A modular Node.js project for OpenAI hackathon activities: Foundations, Chatbot, Advanced Concepts, and Agents SDK.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "concurrently \"npm run api\" \"npm run frontend\"",
    "api": "node api-server.js",
    "frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build"
  },
  "dependencies": {
    "@openai/agents": "latest",
    "axios": "latest",
    "concurrently": "^9.2.0",
    "cors": "^2.8.5",
    "dotenv": "latest",
    "express": "^5.1.0",
    "openai": "latest",
    "zod": "3.25.67"
  }
}
