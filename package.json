{
  "name": "openai-hackathon-starter",
  "version": "1.0.0",
  "description": "A modular Node.js project for OpenAI hackathon activities: Foundations, Chatbot, Advanced Concepts, and Agents SDK.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "test": "node tests/run-tests.js",
    "test:foundations": "node tests/run-tests.js",
    "test:unit": "node tests/run-tests.js --unit-only",
    "test:integration": "node tests/run-tests.js --integration-only",
    "test:verbose": "node tests/run-tests.js --verbose",
    "test:coverage": "c8 --reporter=lcov --reporter=text --reporter=html --reports-dir=coverage node tests/run-tests.js",
    "test:coverage:unit": "c8 --reporter=lcov --reporter=text --reporter=html --reports-dir=coverage node tests/run-tests.js --unit-only",
    "test:coverage:integration": "c8 --reporter=lcov --reporter=text --reporter=html --reports-dir=coverage node tests/run-tests.js --integration-only",
    "coverage:report": "c8 report --reporter=text-summary",
    "coverage:html": "c8 report --reporter=html --reports-dir=coverage"
  },
  "dependencies": {
    "openai": "5.10.2",
    "@openai/agents": "0.0.14",
    "zod": "3.25.67",
    "dotenv": "17.2.1",
    "axios": "1.11.0"
  },
  "devDependencies": {
    "c8": "10.1.3"
  },
  "c8": {
    "include": [
      "foundations/**/*.js",
      "chatbot/**/*.js",
      "advanced/**/*.js",
      "agents/**/*.js",
      "assistants/**/*.js",
      "index.js"
    ],
    "exclude": [
      "tests/**",
      "node_modules/**",
      "coverage/**",
      "*.config.js"
    ],
    "reporter": [
      "text",
      "lcov",
      "html"
    ],
    "reports-dir": "coverage",
    "all": true,
    "check-coverage": false
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "openai",
    "ai",
    "hackathon",
    "chatbot",
    "foundations",
    "agents",
    "nodejs"
  ]
}
